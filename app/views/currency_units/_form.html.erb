      <h2><%= pluralize(currency_unit.errors.count, "error") %> prohibited this currency_unit from being saved:</h2>

      <ul>
        <% currency_unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%#= form.label :country_id %>
    <%= form.label :Country%>
    <% form.text_field :country_id  %>
