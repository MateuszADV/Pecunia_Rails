  </div>

  <div class="field">
    <%= form.label :unit_name_en %>
    <%= form.text_field :unit_name_en %>
  </div>

  <div class="field">
    <%= form.label :unit_name_pl %>
    <%= form.text_field :unit_name_pl %>
  </div>

  <div class="field">
    <%= form.label :cod %>
    <%= form.text_field :cod %>
  </div>

  <div class="field">
    <%= form.label :unit %>
    <%= form.text_field :unit %>
  </div>

  <div class="field">
    <%= form.label :unit_format %>
    <%= form.text_field :unit_format %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%#= form.text_field :status %>
